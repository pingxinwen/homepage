{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "removeComments": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "jsx": "react",
        "lib": ["ES2016","DOM"]
    },
    "include": [
        "src/*.ts",
        "src/**/*",
        "src/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}